<h3 class="mb-3" style="text-align: center">Забыли пароль</h3>
<div class="container position-relative">
    <div class="position-absolute top-50 start-50 translate-middle-x mb-2">
        <div class="card mb-2" style="width: 42rem;">
            <div class="card-body">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <label for="exampleFormControlInput1" class="form-label">Email</label>
                <h6 class="card-subtitle mb-2 text-muted"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></h6>
            </div>
            <div class="container mb-2">
                <div class="row mb-2">
                    <div class="col position-relative">
                        <%= f.button "Сбросить пароль", type: "submit", class: "btn btn-outline-success btn-sm position-relative top-50 start-50 translate-middle" %>
                    </div>
                    <% end %>
                    <div class="col" style="text-align: center">
                      <%= link_to "Войти", new_session_path(resource_name) %>
                    </div>
                    <div class="col" style="text-align: center">
                      <%= link_to "Регистрация", new_registration_path(resource_name) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
