<h3 class="mb-3" style="text-align: center">Регистрация</h3>
<div class="row justify-content-md-center">
    <div class="col col-xs-4 col-lg-6">
        <div class="card mb-2 shadow">
            <div class="card-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <label for="exampleFormControlInput1" class="form-label">Логин</label>
                <%= f.text_field :username, autofocus: true, class: "form-control mb-2" %>
                <label for="exampleFormControlInput1" class="form-label">Email</label>
                <%= f.email_field :email, autocomplete: "email", class: "form-control mb-2" %>
                <% if resource.errors.any? %>
                    <p class="mb-1" style="color: rgb(253, 127, 127)"><%= resource.errors.messages[:email][0] %></p>
                <% end %>
                <label for="exampleFormControlInput1" class="form-label">Пароль</label>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2", type: "password" %>
                <% if resource.errors.any? %>
                    <p class="mb-1" style="color: rgb(253, 127, 127)"><%= resource.errors.messages[:password][0] %></p>
                <% end %>
                <label for="exampleFormControlInput1" class="form-label">Повторите пароль</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2", type: "password" %>
            </div>
            <div class="container mb-2">
                <div class="row mb-2">
                    <div class="col position-relative">
                        <%= f.button "Регистрация", type: "submit", class: "btn btn-outline-success btn-sm position-relative top-50 start-50 translate-middle" %>
                    </div>
                    <% end %>
                    <div class="col" style="text-align: center">
                      <%= link_to "Войти", new_session_path(resource_name), data: {turbo: false} %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
