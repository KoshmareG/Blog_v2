<h3 class="mb-3" style="text-align: center">Регистрация</h3>
<div class="container position-relative">
    <div class="position-absolute top-50 start-50 translate-middle-x mb-2">
        <div class="card mb-2" style="width: 42rem;">
            <div class="card-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <label for="exampleFormControlInput1" class="form-label">Email</label>
                <h6 class="card-subtitle mb-2 text-muted"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></h6>
                <label for="exampleFormControlInput1" class="form-label">Пароль</label>
                <p class="card-text mb-2"><%= f.password_field :password, autocomplete: "new-password", class: "form-control", type: "password" %></p>
                <label for="exampleFormControlInput1" class="form-label">Повторите пароль</label>
                <p class="card-text mb-2"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", type: "password" %></p>
            </div>
            <div class="container mb-2">
                <div class="row mb-2">
                    <div class="col position-relative">
                        <%= f.button "Регистрация", type: "submit", class: "btn btn-outline-success btn-sm position-relative top-50 start-50 translate-middle" %>
                    </div>
                    <% end %>
                    <div class="col position-relative">
                      <%= link_to "Войти", new_session_path(resource_name), class: "position-relative start-50" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
