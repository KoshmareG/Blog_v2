<h3 class="mb-3" style="text-align: center">Вход</h3>
<div class="container position-relative">
    <div class="position-absolute top-50 start-50 translate-middle-x mb-2">
        <div class="card mb-2" style="width: 42rem;">
            <div class="card-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <label for="exampleFormControlInput1" class="form-label">Email</label>
                <h6 class="card-subtitle mb-2 text-muted"><%= f.email_field :email, class: "form-control" %></h6>
                <label for="exampleFormControlInput1" class="form-label">Пароль</label>
                <p class="card-text mb-2"><%= f.password_field :password, class: "form-control", type: "password" %></p>
                <div class="form-check mb-0">
                  <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault" %>
                  <label class="form-check-label" for="flexCheckDefault">
                      Запомнить меня
                  </label>
                  <% end %>
                </div>
            </div>
            <div class="container mb-2">
                <div class="row mb-2">
                    <div class="col position-relative">
                        <%= f.button "Войти", type: "submit", class: "btn btn-outline-success btn-sm position-relative top-50 start-50 translate-middle" %>
                    </div>
                    <% end %>
                    <div class="col" style="text-align: center">
                        <%= link_to "Забыли пароль?", new_password_path(resource_name) %>
                    </div>
                    <div class="col" style="text-align: center">
                        <%= link_to "Регистрация", new_registration_path(resource_name) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
