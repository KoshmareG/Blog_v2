<h3 class="mb-3" style="text-align: center">Горячие сатьи</h3>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col col-xs-4 col-lg-8">
            <% @articles.each do |art| %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%= art.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= art.created_at %></h6>
                    <p class="card-text"><%= art.text.size >= 600 ? simple_format(art.text[0, 600]) + ' ...' : simple_format(art.text) %></p>
                    <%= link_to article_path(art.id), class: "btn btn-outline-secondary btn-sm" do %>Открыть пост<% end %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
