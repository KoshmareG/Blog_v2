<p><%= @article.id %></p>
<p><%= @article.title %></p>
<p><%= @article.text %></p>

<%= link_to 'Изменить', edit_article_path %></br>
<%= link_to 'Список статей', articles_path %></br>
<%= button_to 'Удалить', article_path, method: :delete %></br></br>

<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
        <%= f.label :author %><br/>
        <%= f.text_field :author %>
    </p>
    <p>
        <%= f.label :boby %><br/>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<% @article.comments.each do |comment| %>
<p><%= comment.author %></p>
<p><%= comment.body %></p>
<p><%= comment.created_at %></p>
<% end %>